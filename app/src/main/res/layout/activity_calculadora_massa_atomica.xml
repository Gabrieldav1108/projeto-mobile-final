<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CABEÇALHO -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bg_header"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000000"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Massa Atômica"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- BOTÃO TABELA PERIÓDICA -->
        <ImageButton
            android:id="@+id/btnTabelaPeriodica"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_tabela"
            android:background="@drawable/bg_button"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:contentDescription="Abrir tabela periódica" />

        <!-- QUANTIDADE DE ISÓTOPOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade de Isótopos:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/etQuantidade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Ex: 2"
                android:background="@drawable/bg_header"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btnGerarCampos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:text="Gerar Campos"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- ISÓTOPOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isótopos:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:id="@+id/containerIsotopos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20px">

            <!-- Exemplo de bloco de isótopo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_header"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isótopo 1:"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Massa (u)"
                    android:inputType="numberDecimal"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Abundância (%)"
                    android:inputType="numberDecimal"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- BOTÃO CALCULAR -->
        <TextView
            android:id="@+id/btnCalcular"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Calcular"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingVertical="14dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- RESULTADO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvResultado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_header"
                android:text="--"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- BOTÃO USAR NA MASSA MOLAR -->
        <TextView
            android:id="@+id/btnUsarNaMassaMolar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usar na Massa Molar"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</ScrollView>