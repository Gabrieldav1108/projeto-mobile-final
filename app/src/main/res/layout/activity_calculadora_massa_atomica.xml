<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_header"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <!-- Ícone de voltar (nova seta à esquerda) -->
            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000000"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Título (centralizado) -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Massa Atômica"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_centerInParent="true" />

            <!-- Ícone de menu (mantido à direita) -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>
        <ImageButton
            android:id="@+id/btnTabelaPeriodica"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_tabela"
            android:backgroundTint="#00BCD4"
            android:background="@drawable/bg_button"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:elevation="6dp"
            android:contentDescription="Abrir tabela periódica" />

        <!-- Quantidade de Isótopos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade de Isótopos:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etQuantidade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Ex: 2"
                android:background="@drawable/bg_header"
                android:padding="8dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/btnGerarCampos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:text="Gerar Campos"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Isótopos -->
        <LinearLayout
            android:id="@+id/containerIsotopos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Exemplo de bloco de isótopo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_header"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isótopo 1:"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Massa (u)"
                    android:inputType="numberDecimal"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Abundância (%)"
                    android:inputType="numberDecimal"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botão Calcular -->
        <TextView
            android:id="@+id/btnCalcular"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Calcular"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Resultado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header"
            android:text="--"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUsarNaMassaMolar"
            android:text="Usar na Massa Molar"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button"
            android:padding="13dp"
            android:textColor="#000"
            android:textStyle="bold"
            />

    </LinearLayout>
</ScrollView>
