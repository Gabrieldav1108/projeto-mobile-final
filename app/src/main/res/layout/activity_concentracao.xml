<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="25dp"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CABEÇALHO -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bg_header"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000000"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concentração"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- O QUE É? -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que é?"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A concentração indica a quantidade de soluto presente em um determinado volume de solução."
                android:textColor="#000000"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ela mostra o 'quanto de substância' está dissolvido — por exemplo, uma solução muito concentrada tem bastante soluto, enquanto uma diluída tem pouco."
                android:textColor="#000000"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- COMO CALCULAR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como Calcular:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Divida a quantidade de matéria do soluto (em mol) pelo volume total da solução (em litros)."
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- FÓRMULA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fórmula:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="C = n / V"
                android:textSize="16sp"
                android:background="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onde:\n• C = concentração (mol/L)\n• n = quantidade de soluto (mol)\n• V = volume da solução (L)"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- EXEMPLO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exemplo:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uma solução contém 0,5 mol de soluto em 2 litros de solução."
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="C = 0,5 ÷ 2 = 0,25 mol/L"
                android:textSize="14sp"
                android:background="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado: 0,25 mol/L"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- BOTÃO CALCULADORA -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/btnCalculadora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:text="Calculadora"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>