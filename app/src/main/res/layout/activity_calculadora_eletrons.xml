<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- CABEÇALHO -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bg_header"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000000"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elétrons de Valência"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp" />
        </RelativeLayout>

        <!-- CONTEÚDO PRINCIPAL CENTRALIZADO -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- NÚMERO ATÔMICO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número Atômico (Z)"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/etNumeroAtomico"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Digite Z (1-118)"
                android:inputType="number"
                android:background="@drawable/bg_header"
                android:padding="14dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:maxLength="3" />

            <!-- BOTÃO CALCULAR CENTRALIZADO -->
            <TextView
                android:id="@+id/btnCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/bg_button"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="30dp" />

            <!-- RESULTADOS PRINCIPAIS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:gravity="center" />

            <!-- DISTRIBUIÇÃO RESUMIDA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distribuição Eletrônica:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvDistribuicaoResumida"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header"
                android:text="--"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginBottom="20dp" />

            <!-- TABELA DE DISTRIBUIÇÃO DETALHADA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distribuição Passo a Passo:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_header"
                android:padding="12dp"
                android:layout_marginBottom="20dp">

                <!-- Cabeçalho da Tabela -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8px"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ordem"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subnível"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Capacidade"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Preenchido"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Tabela será preenchida dinamicamente -->
                <LinearLayout
                    android:id="@+id/tabelaDistribuicao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- CAMADA DE VALÊNCIA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camada de Valência:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvCamadaValencia"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header"
                android:text="--"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginBottom="20dp" />

            <!-- ELÉTRONS DE VALÊNCIA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elétrons de Valência:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvEletronsValencia"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header"
                android:text="--"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>