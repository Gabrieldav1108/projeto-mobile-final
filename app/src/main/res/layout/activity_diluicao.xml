<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="25dp"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CABEÇALHO -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bg_header"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000000"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diluição de Soluções"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- O QUE É? -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que é?"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A diluição ocorre quando uma solução é misturada com mais solvente, diminuindo sua concentração."
                android:textColor="#000000"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O total de soluto não muda — apenas o volume e a concentração final."
                android:textColor="#000000"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- COMO CALCULAR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como Calcular:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Use a relação entre concentração e volume antes e depois da diluição."
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- FÓRMULA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fórmula:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="C₁ × V₁ = C₂ × V₂"
                android:textSize="16sp"
                android:background="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onde:\n• C₁ = concentração inicial (mol/L)\n• V₁ = volume inicial (L)\n• C₂ = concentração final (mol/L)\n• V₂ = volume final (L)"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- EXEMPLO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exemplo:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uma solução de 0,5 mol/L tem volume de 100 mL. Após diluir, o volume passa a 200 mL."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcule a nova concentração:"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="0,5 × 100 = C₂ × 200"
                android:textSize="14sp"
                android:background="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="C₂ = (0,5 × 100) / 200"
                android:textSize="14sp"
                android:background="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="C₂ = 0,25 mol/L"
                android:textSize="14sp"
                android:background="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado: 0,25 mol/L"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- BOTÃO CALCULADORA -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/btnCalculadora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:text="Calculadora"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>