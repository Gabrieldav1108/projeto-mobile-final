<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CABEÇALHO -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bg_header"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000000"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Massa Molar"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- DEFINIÇÃO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/definicao_masa_molar"
                android:textColor="#000000"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unidade_de_medida_massa_molar"
                android:textColor="#000000"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- COMO CALCULAR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como Calcular:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Identifique os elementos que formam a substância e suas quantidades (índices)."
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Multiplique a massa atômica de cada elemento pelo número de átomos desse elemento."
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Some todos os valores encontrados."
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O resultado será a massa molar do composto."
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <!-- FÓRMULA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fórmula:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16px"
            android:layout_marginBottom="20px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/formula_massa_molar"
                android:textSize="14sp"
                android:background="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onde:\n• M = massa molar\n• n = número de átomos do elemento\n• A = massa atômica do elemento"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- EXEMPLO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exemplo:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="16dp"
            android:layout_marginBottom="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Substância: H₂O"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2,3"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginBottom="12dp">

                <!-- Cabeçalho -->
                <TableRow
                    android:background="#fff">
                    <TextView
                        android:text="Elemento"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="Quant. (n)"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="M. Atômica (A)"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="Cálculo"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                </TableRow>

                <!-- Linha 1 -->
                <TableRow>
                    <TextView
                        android:text="H"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="2"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="1"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="2 × 1 = 2"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                </TableRow>

                <!-- Linha 2 -->
                <TableRow>
                    <TextView
                        android:text="O"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="1"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="16"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:text="1 × 16 = 16"
                        android:padding="6dp"
                        android:textSize="12sp"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Massa Molar (H₂O): M = 2 + 16 = 18 g/mol"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- BOTÃO CALCULADORA -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px">

            <TextView
                android:id="@+id/btnCalculadora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:text="Calculadora"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>