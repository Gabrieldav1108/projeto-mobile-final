<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- CABEÇALHO -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bg_header"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000000"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diluição de Soluções"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp" />
        </RelativeLayout>

        <!-- OBSERVAÇÃO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observação:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Para realizar o cálculo de diluição, é necessário preencher pelo menos três dos quatro valores: C₁, V₁, C₂ ou V₂."
            android:background="@drawable/bg_header"
            android:padding="12dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

        <!-- CONTEÚDO PRINCIPAL CENTRALIZADO -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- CAMPO C₁ - CONCENTRAÇÃO INICIAL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C₁ = concentração inicial (mol/L)"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/etC1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Digite C₁"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_header"
                android:padding="14dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:gravity="center" />

            <!-- CAMPO V₁ - VOLUME INICIAL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V₁ = volume inicial (L)"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/etV1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Digite V₁"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_header"
                android:padding="14dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:gravity="center" />

            <!-- CAMPO C₂ - CONCENTRAÇÃO FINAL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C₂ = concentração final (mol/L)"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/etC2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Digite C₂"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_header"
                android:padding="14dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:gravity="center" />

            <!-- CAMPO V₂ - VOLUME FINAL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V₂ = volume final (L)"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/etV2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Digite V₂"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_header"
                android:padding="14dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="30dp"
                android:gravity="center" />

            <!-- BOTÃO CALCULAR CENTRALIZADO -->
            <TextView
                android:id="@+id/btnCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/bg_button"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="30dp" />

            <!-- RELAÇÃO E RESULTADO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relação:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvRelacao"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header"
                android:text="C₁ × V₁ = C₂ × V₂"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Variável Calculada:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvResultado"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header"
                android:text="--"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="14dp"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>