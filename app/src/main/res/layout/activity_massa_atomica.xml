<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CABEÇALHO -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_header"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Massa Atômica"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_centerInParent="true" />

            <!-- Ícone de menu -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- O que é -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que é?"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Definição: É o valor médio ponderado das massas dos isótopos de um elemento, considerando a abundância de cada um na natureza."
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unidade de medida: É expressa em unidades de massa atômica (u), onde 1u = 1/12 da massa do átomo de carbono-12."
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Como Calcular -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como Calcular:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Multiplica-se a massa de cada isótopo pela sua abundância relativa."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Soma-se os valores obtidos."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Divide-se o resultado por 100 (já que a abundância está em porcentagem)."/>
        </LinearLayout>

        <!-- Fórmula -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fórmula:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Massa Atômica = (m1 × %1) + (m2 × %2) + ... / 100"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/bg_header"
            android:layout_marginBottom="16dp"/>

        <!-- Exemplo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exemplo:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            android:padding="12dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isótopos do elemento X:\n\n22X → 40%\n36X → 60%"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cálculo:\nMassa Atômica = (22 × 40) + (36 × 60)\n/ 100\n= 880 + 2160 / 100\n= 30,4 u\n\nX = 30,4 u"/>
        </LinearLayout>

        <!-- BOTÃO CALCULADORA -->
        <!-- BOTÃO CALCULADORA ESTILO SEGUNDA FOTO -->
        <!-- Linha com Voltar à esquerda e Calculadora à direita -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <!-- Botão Voltar -->
            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000000"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Voltar" />

            <!-- Botão Calculadora -->
            <TextView
                android:id="@+id/btnCalculadora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header"
                android:text="Calculadora"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>
