<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="25dp"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cabeçalho -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_header"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000000"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Massa Molar"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Botão tabela periódica -->
        <ImageButton
            android:id="@+id/btnTabelaPeriodica"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_tabela"
            android:background="@drawable/bg_button"
            android:layout_gravity="end"
            android:layout_marginBottom="12dp"
            android:contentDescription="Abrir tabela periódica" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elementos:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/containerElementos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- NOVO: Layout horizontal para os botões Adicionar e Calcular -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="16dp">

            <!-- Botão Adicionar Campo -->
            <TextView
                android:id="@+id/btnAdicionarCampo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Adicionar"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/bg_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="start" />

            <!-- Botão Calcular -->
            <TextView
                android:id="@+id/btnCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/bg_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:layout_gravity="start" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvResultadoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_header"
            android:padding="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start" />

    </LinearLayout>
</ScrollView>