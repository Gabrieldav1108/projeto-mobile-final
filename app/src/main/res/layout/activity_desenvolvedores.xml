<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_header"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <!-- Ícone de voltar (nova seta à esquerda) -->
        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#000000"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Título (centralizado) -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desenvolvedores"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_centerInParent="true" />

        <!-- Ícone de menu (mantido à direita) -->
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_menu"
            android:tint="#000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_header"
        android:padding="20dp"
        android:layout_margin="8dp">

        <!-- Foto arredondada com margem -->
        <ImageView
            android:id="@+id/ivFoto1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/julio"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_foto_arredondada"
            android:layout_marginEnd="24dp" />

        <!-- Informações com mais espaçamento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <!-- Nome com mais margem -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: Julio R. Sant' Ana"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Email com mais margem -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: julioribeiro041@gmail.com"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="16dp" />

            <!-- Divisor mais visível -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="16dp" />

            <!-- Cargo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analista de Sistemas"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_header"
        android:padding="20dp"
        android:layout_margin="8dp">

        <!-- Foto arredondada com margem -->
        <ImageView
            android:id="@+id/ivFoto2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/picture_gabriel_360x360_rounded"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_foto_arredondada"
            android:layout_marginEnd="24dp" />

        <!-- Informações com mais espaçamento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <!-- Nome com mais margem -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: Gabriel S. D'Avila"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Email com mais margem -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: gabrielsdavila2@gmail.com"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="16dp" />

            <!-- Divisor mais visível -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="16dp" />

            <!-- Cargo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desenvolvedor Fullstack"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_header"
        android:padding="20dp"
        android:layout_margin="8dp">

        <!-- Foto arredondada com margem -->
        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/victor"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_foto_arredondada"
            android:layout_marginEnd="24dp" />

        <!-- Informações com mais espaçamento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <!-- Nome com mais margem -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: Victor da Cruz Peres"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Email com mais margem -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: victor.peres@rolante.ifrs.edu.br"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="16dp" />

            <!-- Divisor mais visível -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="16dp" />

            <!-- Cargo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coordenador"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
