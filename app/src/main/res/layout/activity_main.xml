<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- CABEÇALHO AZUL COM BORDAS ARREDONDADAS -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_header"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <!-- Título centralizado -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora Química"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_centerInParent="true" />

        <!-- Ícone de menu hambúrguer -->
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_menu"
            android:tint="#000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- FAIXA AZUL "Tabela Periódica" -->
    <TextView
        android:id="@+id/labelTabela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tabela Periódica"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/bg_header"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="50dp"/>

    <!-- IMAGEM DA TABELA -->
    <ImageView
        android:id="@+id/ivTabela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tabela"
        android:adjustViewBounds="true"
        android:layout_gravity="center" />

</LinearLayout>
