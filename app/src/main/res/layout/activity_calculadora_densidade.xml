<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CABEÇALHO -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bg_header"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000000"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Densidade"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnTabelaPeriodica"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_tabela"
            android:background="@drawable/bg_button"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:contentDescription="Abrir tabela periódica" />

        <!-- CAMPO MASSA (g) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="massa (g)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etMassa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite a massa em gramas"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_header"
            android:padding="14dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="20dp" />

        <!-- CAMPO VOLUME (mL ou cm³) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="volume (mL ou cm³)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o volume em mL ou cm³"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_header"
            android:padding="14dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="30dp" />

        <!-- BOTÃO CALCULAR ALINHADO À DIREITA -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/btnCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/bg_button"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentEnd="false" />
        </RelativeLayout>

        <!-- RESULTADO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvResultadoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvResultado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_header"
                android:text="--"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>